{
  "manifest_version": 3,
  "name": "EcoCart - Greener Shopping Assistant",
  "description": "Suggests greener alternatives to products based on current page.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "eco-tag.png",
      "48": "planet-earth.png",
      "128": "badge.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "eco-tag.png",
    "48": "planet-earth.png",
    "128": "badge.png"
  }
}
